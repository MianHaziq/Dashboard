{
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react-hooks/recommended",
    "plugin:react/recommended"
  ],
  "settings": {
    "version": "detect"
  },
  "rules": {
    "no-console": "off",
    "no-debugger": "warn",
    "no-unused-vars": "off",
    "allow-empty-catch": "off",
    "no-tabs": "off",
    "no-mixed-spaces-and-tabs": "off",
    "react/react-in-jsx-scope": "off",
    "react-hooks/exhaustive-deps": "off"
  }
}